#!/bin/bash

# Get all process IDs
pids=$(ls /proc | grep -E '^[0-9]+$')

# Loop through each process ID
for pid in $pids; do
  # Read the name of the process from its status file
  process_name=$(cat /proc/$pid/status | grep 'Name:' | awk '{print $2}')
  
  # Check if the process name contains the word "bash"
  if [[ $process_name == *"bash"* ]]; then
    # Display the PID and process name if the condition is met
    echo "PID: $pid, Process Name: $process_name"
  fi
done

